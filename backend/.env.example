DATABASE_URL=mysql://user:password@localhost:3306/steamtools
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=steamtools
PORT=3001
NODE_ENV=development

# Platform API Configuration
# Epic Games Store (uses GraphQL - no API key required for public catalog)
EPIC_GAMES_API_KEY=
EPIC_GAMES_CLIENT_ID=
EPIC_GAMES_CLIENT_SECRET=

# GOG Galaxy API (no API key required for public catalog)
GOG_API_KEY=
GOG_CLIENT_ID=
GOG_CLIENT_SECRET=

# Steam Web API (get key at https://steamcommunity.com/dev/apikey)
STEAM_API_KEY=

# Sync and Cache Configuration
API_SYNC_INTERVAL=6
CACHE_TTL=21600
ENABLE_AUTO_SYNC=true
